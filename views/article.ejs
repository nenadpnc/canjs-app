<article class="article" data-id="<%= article.id %>" <%= (el)-> el.data('article', article) %>>
    <div class="post__wrapper--subpage">    
                <div class="post__media"><img src="<%= article.imgSrc %>" alt="featured-image"></div>
                <header class="post__header--subpage">
                    <h2 class="post__title post__title--subpage">
                        <a class="post__link post__title_link"><%= article.title %></a>
                    </h2>
                    <time datetime="2014-06-20" class="post__date">
                        <%= article.date %>
                    </time> 
                </header>
                <section class="post__content">
                    <%== article.htmlTxt %>
                </section>
                <footer class="post__footer">
                    <div class="social social--share">
                        <span class="social__label">Share: </span>
                        <a id="twitter" class="social__icon social__icon--twitter" href="http://twitter.com/share?text=<%= article.title %>">
                            <span class="social__icon--hidden">Twitter</span>
                        </a>
                        <a id="facebook" class="social__icon social__icon--fb" href="https://www.facebook.com/sharer/sharer.php">
                            <span class="social__icon--hidden">Facebook</span>
                        </a>
                        <a id="google" class="social__icon social__icon--gplus" href="https://plus.google.com/share">
                            <span class="social__icon--hidden">Google+</span>
                        </a>
                    </div>
                    <ul class="post__meta post__meta--subpage">
                        <% list(article.tags, function(tag){ %>
                            <li class="post__tag"><a class="post__link post__tag_link"><%= tag %></a> </li>
                        <% }) %>
                    </ul>
                </footer>
            </div>
</article>